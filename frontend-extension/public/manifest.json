{
  "name": "BrowserGPT",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Get instant answers to your questions about any webpage",
  "browser_action": {
    "default_icon": "/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "/logo.png"
  },
  "icons": {
    "16": "/icons/logo16.png",
    "32": "/icons/logo32.png",
    "48": "/icons/logo48.png",
    "128": "/icons/logo128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "http://localhost:3001/*"
  ]
}